<?xml version="1.0"?>
<!DOCTYPE resource-action-mapping PUBLIC "-//Liferay//DTD Resource Action Mapping 6.2.0//EN"
"http://www.liferay.com/dtd/liferay-resource-action-mapping_6_2_0.dtd">

<resource-action-mapping>

	<portlet-resource>
	    <portlet-name>samplepermission-portlet</portlet-name>
	    <permissions>
	        <supports>
	            <action-key>ADD_TO_PAGE</action-key>
	            <action-key>CONFIGURATION</action-key>
	            <action-key>VIEW</action-key>
	            <action-key>LAYOUT</action-key>
	            <action-key>OWNER</action-key>
	            <action-key>REVIEWER</action-key>
	            <action-key>USER</action-key>
	            <action-key>GUEST</action-key>
	            <action-key>CUSTOM</action-key>
	        </supports>
	        <site-member-defaults>
	        </site-member-defaults>
	        <guest-defaults>
	        </guest-defaults>
	        <guest-unsupported/>
	        <layout-manager>
	        </layout-manager>
			<owner-defaults>
	        </owner-defaults>
	    </permissions>
	</portlet-resource>

	<portlet-resource>
	    <portlet-name>guide-portlet</portlet-name>
	    <permissions>
	        <supports>
	            <action-key>ADD_TO_PAGE</action-key>
	            <action-key>CONFIGURATION</action-key>
	            <action-key>VIEW</action-key>
	        </supports>
	        <site-member-defaults>
	            <action-key>VIEW</action-key>
	        </site-member-defaults>
	        <guest-defaults>
	            <action-key>VIEW</action-key>
	        </guest-defaults>
	        <guest-unsupported />
	    </permissions>
	</portlet-resource>

	<model-resource>
	    <model-name>com.sdr.guide.model.Guide</model-name>
	    <portlet-ref>
	        <portlet-name>guide-portlet</portlet-name>
	    </portlet-ref>
	    <permissions>
	        <supports>
				<action-key>VIEW</action-key>
				<action-key>ADD_ENTRY</action-key>
				<action-key>UPDATE</action-key>
				<action-key>DELETE</action-key>
				<action-key>PERMISSIONS</action-key>
			</supports>
	        <site-member-defaults>
	            <action-key>ADD_ENTRY</action-key>
	            <action-key>VIEW</action-key>
	        </site-member-defaults>
	        <guest-defaults>
	            <action-key>VIEW</action-key>
	        </guest-defaults>
	        <guest-unsupported>
	            <action-key>UPDATE</action-key>
	        </guest-unsupported>
	    </permissions>
	</model-resource>

</resource-action-mapping>